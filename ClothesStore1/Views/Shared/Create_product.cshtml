            <div id="right">
                <div class="line-top"></div>
                <div class="title">Thông tin sản phẩm mới</div>
                <div class="line-bottom"></div>
                <form>
                    <div class="label">Tên sản phẩm: </div>
                    <input type="text" name="ProductName"/>
                    <div class="label">Giá sản phẩm:</div>
                    <input type="number" name="ProductPrice" />
                    <div class="label">Danh mục:</div>
                    <input type="text" name="ProductPrice" />
                    <div class="label">Nơi sản xuất: </div>
                    <input type="text" name="Sup" />
                    <div class="label">Hình ảnh:</div>
                    <input type="file" multiple="multiple" name="ProductName"/>
                    <div class="label">Mô tả</div>
                    <input type="text" name="ProductName" />
                    <br>
                    <input type="button" value="Đăng sản phẩm" />
                </form>
