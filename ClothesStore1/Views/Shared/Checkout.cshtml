    <title>@ViewBag.Title</title>
    <link href="~/Content/css/main.css" rel="stylesheet" />
    <!--Script-->
    <script>
        function changeImage($s) {
            var image = document.getElementById('myImage');
            image.src = $s;
        }
    </script>
</head>
<body>
    <div id="head-menu">
    <div id="logo">
        <a href=""><img src="~/Content/images/products/logo.png" /></a>
    </div>
    <div id="menu">
        <div class="dropdow">
            <div class="dropdown-content">
                <div class="parent-menu">
                    <div class="title"><a href="#">Danh mục</a></div>
                    <div class="parent-menu-content">
                        <div class="child-menu"><a href="#">Danh mục 1</a></div>
                        <div class="child-menu"><a href="#">Danh mục 2</a></div>
                        <div class="child-menu"><a href="#">Danh mục 3</a></div>
                    </div>
                </div>
                <div class="parent-menu">
                    <div class="title"><a href="#">Blogs</a></div>
                </div>
                <div class="parent-menu">
                    <div class="title"><a href="#">Giới thiệu</a></div>
                </div>
                <div class="parent-menu">
                    <div class="title"><a href="#">Thông tin liên hệ</a></div>
                </div>
            </div>
        </div>
        <div class="admin">
            <div class="parent-menu">
                <div class="title">Hello, Admin</div>
                <div class="parent-menu-content">
                    <div class="child-menu"><a href="#">Đăng sản phẩm</a></div>
                    <div class="child-menu"><a href="#">Quản lý sản phẩm</a></div>
                    <div class="child-menu"><a href="#">Quản lý danh mục</a></div>
                    <div class="child-menu"><a href="#">Quản lý banner</a></div>
                    <div class="child-menu"><a href="#">Quản lý Đơn hàng</a></div>
                    <div class="child-menu"><a href="#">Đăng xuất</a></div>
                </div>
            </div>
        </div>
        <div class="right">
            <div class="search">
                <a href="#"></a>
                <div class="search-content">
                    <input type="text">
                    <input type="button" value="Tìm" />
                    <a href="#">Nâng cao</a>
                </div>
            </div>
            <div class="cart">
                <a href="#"></a>
                <div class="cart-content">
                    <div class="box">
                        <div class="picture">
                            <img src="~/Content/images/products/dress/1.png" />
                        </div>
                        <div class="name">Tên sản phẩm</div>
                        <div class="price">999 999  VNĐ</div>
                    </div>
                    <div class="box">
                        <div class="picture">
                            <img src="~/Content/images/products/dress/1.png" />
                        </div>
                        <div class="name">Tên sản phẩm</div>
                        <div class="price">999 999  VNĐ</div>
                    </div>
                    <div class="action">
                        <input type="button" value="Thanh toán" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="line"></div>
</div>
    <!--Checkout-->
    <div id="checkout">
        <div class="wrap">
            <div class="left">
                <div class="title1">Thông tin liên lạc</div>                
                <div class="label">Họ tên:</div>
                <input type="text" />
                <div class="label">Email:</div>
                <input type="email" />
                <div class="label">Số điện thoại:</div>
                <input type="text" />
                <div class="label">Địa chỉ:</div>
                <input type="text" />
            </div>
            <div class="line"></div>
            <div class="right">
                <div class="title1">Thông tin đặt hàng</div>
                <div id="right-wrap">
                    <div class="list-title">
                        <div class="pic-title">Hình ảnh sản phẩm</div>
                        <div class="name-title">Tên sản phẩm</div>
                        <div class="quant-title">Số lượng</div>
                        <div class="price-title">Giá</div>                        
                        <div class="act-title"></div>
                    </div>
                    <div class="box">
                        <div class="picture"><img src="~/Content/images/products/13.png" /></div>
                        <div class="name">đây là tên sản phẩm</div>
                        <div class="quantity"><input type="text" value="1" /></div>
                        <div class="price"> 999 999 VNĐ</div>                        
                        <div class="action"><a href="#">Hủy</a></div>
                    </div>
                    <div class="box">
                        <div class="picture"><img src="~/Content/images/products/13.png" /></div>
                        <div class="name">đây là tên sản phẩm</div>                        
                        <div class="quantity"><input type="text" value="1" /></div>
                        <div class="price"> 999 999 VNĐ</div>
                        <div class="action"><a href="#">Hủy</a></div>
                    </div>
                    <div class="rw-bottom">
                        <div class="sum"><p>Tổng:</p><div class="num">999 999 999 VNĐ</div></div>
                        <input type="button" class="confirm" value="Xác nhận" />
                    </div>                                 
            </div>
        </div>
       </div>
    </div>
    <!--Checkout end-->
    <div id="footer">
        <div class="top">
            <div class="logo"><img src="~/Content/images/banner/footer-logo.png" /></div>
            <ul>
                <li><a href="#">Home</a></li>
                <li class="line"></li>
                <li><a href="#">Blog</a></li>
                <li class="line"></li>
                <li><a href="#">Tìm kiếm nâng cao</a></li>
                <li class="line"></li>
                <li><a href="#">Thông tin</a></li>
                <li class="line"></li>
                <li><a href="#">Liên hệ</a></li>
            </ul>
        </div>
        <div class="line1"></div>
        <div class="bottom">
            <p>Coppyright © 2016 3T. All Rights Reserved</p>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
