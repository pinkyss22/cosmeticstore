@model ClothesStore1.Models.Product
@{
    ViewBag.Title = ""+Model.ProductName;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="right">
<div class="line-top"></div>
<div class="title">Thông tin sản phẩm</div>
<div class="line-bottom"></div>
@using (Html.BeginForm())
{
    //xoa hinh anh cua san pham trong table imageinfor
    @Html.HiddenFor(model => model.ProductId)

    @Html.DisplayTextFor(model=>model.ProductName)
    <br />
    <img src= "@Html.DisplayTextFor(model=>model.mainImage)"/>
    <br />
    @Html.LabelFor(model => model.ProductPrice, new { @class = "label" })
    @Html.DisplayTextFor(model => model.ProductPrice)
    <br />
    @Html.LabelFor(model => model.ProductQuantity, new { @class = "label" })
    @Html.DisplayTextFor(model => model.ProductQuantity)
    <br />
    @Html.LabelFor(model => model.ProductDescription, new { @class = "label" })
    <br />
    @Html.DisplayTextFor(model => model.ProductDescription)
    <br />
    @Html.LabelFor(model => model.ProductSupplier, new { @class = "label" })
    @Html.DisplayTextFor(model => model.ProductSupplier)
    <br />
    @Html.LabelFor(model => model.CategoryId, new { @class = "label" })
    @Html.DisplayTextFor(model=>model.CategoryId)
    <br />

    <input type="button" value="Trở về" onclick="window.history.back()" />
    <input type="submit" value="Xác nhận xóa" />
}
</div>