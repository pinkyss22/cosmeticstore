@model ClothesStore1.Models.Product
@{
    ViewBag.Title = "Cập nhật " + @Html.DisplayTextFor(model=>model.ProductName);
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="right">
    <div class="line-top"></div>
    <div class="title">Thông tin sản phẩm</div>
    <div class="line-bottom"></div>
    @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model=>model.ProductId)
        
        @Html.LabelFor(model => model.ProductName, new { @class = "label" })
        @Html.TextBoxFor(model => model.ProductName)
        @Html.ValidationMessageFor(model => model.ProductName)
        <br />
        @Html.LabelFor(model => model.ProductPrice, new { @class = "label" })
        @Html.TextBoxFor(model => model.ProductPrice)
        @Html.ValidationMessageFor(model => model.ProductPrice)
        <br />
        @Html.LabelFor(model => model.ProductQuantity, new { @class = "label" })
        @Html.TextBoxFor(model => model.ProductQuantity)
        @Html.ValidationMessageFor(model => model.ProductQuantity)
        <br />
        @Html.LabelFor(model => model.ProductDescription, new { @class = "label" })
        <br />
        @Html.TextAreaFor(model => model.ProductDescription, new { @class = "ckeditor" })
        @Html.ValidationMessageFor(model => model.ProductDescription)
        <br />
        @Html.LabelFor(model => model.ProductSupplier, new { @class = "label" })
        @Html.TextBoxFor(model => model.ProductSupplier)
        @Html.ValidationMessageFor(model => model.ProductSupplier)
        <br />

        @Html.LabelFor(model => model.CategoryId, new { @class = "label" })
        @Html.DropDownList("CategoryId", (IEnumerable<SelectListItem>)ViewBag.CatId, "Chọn danh mục")
        @Html.ValidationMessageFor(model => model.CategoryId)
        <br />
        @Html.LabelFor(model => model.ImageInfors, new { @class = "label" })
        <input type="file" name="file" multiple="multiple" />
        <br />
        <input type="button" value="Trở về" onclick="window.history.back()"/>
        <input type="submit" value="Cập nhật" />
    }
</div>
@section Scripts{
    @System.Web.Optimization.Scripts.Render("~/bundles/ckeditor")
}
